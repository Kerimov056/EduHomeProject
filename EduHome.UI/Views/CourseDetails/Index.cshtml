@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model.courses)
{
    if (item.Id == ViewBag.Id)
    {
        <!-- Banner Area Start -->
        <div class="banner-area-wrapper">
            <div class="banner-area text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>courses details</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner Area End -->

        <form method="post">
            <div class="courses-details-area blog-area pt-150 pb-140">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="courses-details">
                                <div class="courses-details-img">
                                    <img style="width:800px;height:700px;object-fit:cover" src="/@item.ImagePath" alt="courses-details">
                                </div>
                                <div class="course-details-content">
                                    <h2>@item.Name</h2>
                                    <p>@Html.Raw(item.Descripton)</p>
                                    <div class="course-details-left">
                                    </div>
                                    <div class="course-details-right">
                                        <h3>COURSE FEATURES</h3>
                                        <ul>
                                            <li>starts <span>@item.CoursesDetails.Starts.ToString("dd MMM yyyy")</span></li>
                                            <li>duration <span>@item.CoursesDetails.Month Month</span></li>
                                            <li>class duration <span>@item.CoursesDetails.Hours hours</span></li>
                                            <li>skill level <span>@item.CoursesDetails.Level</span></li>
                                            <li>language <span>@item.CoursesDetails.Language</span></li>
                                            <li>students <span>@item.CoursesDetails.Students</span></li>
                                            <li>assesments <span>@item.CoursesDetails.Assesments</span></li>
                                        </ul>
                                        <h3 class="red">course fee $@item.CoursesDetails.CourseFee</h3>
                                    </div>
                                </div>

                                <form method="post" asp-controller="CourseDetails" asp-action="AddComment" asp-route-courseId="@item.Id">
                                    <div>
                                        <h1>Burasi Comments</h1>
                                        <textarea name="message" rows="4" class="form-control" placeholder="Your Comments"></textarea>
                                    </div>
                                    <div class="submit-section">
                                        <button class="btn submit-btn" type="submit">Submit</button>
                                    </div>
                                </form>

                                <div>
                                    @foreach (var comment in ViewBag.ByComment)
                                    {
                                        <p>@comment</p>
                                    }
                                </div>

                                <div class="reply-area">
                                    <h3>LEAVE A REPLY</h3>
                                    <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                                    <form id="contact-form" action="https://htmldemo.net/tm/eduhome/eduhome/mail.php" method="post">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p>Name</p>
                                                <input type="text" name="name" id="name">
                                            </div>
                                            <div class="col-md-12">
                                                <p>Email</p>
                                                <input type="text" name="email" id="email">
                                            </div>
                                            <div class="col-md-12">
                                                <p>Subject</p>
                                                <input type="text" name="subject" id="subject">
                                                <p>Massage</p>
                                                <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                            </div>
                                        </div>
                                        <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                                        <p class="form-messege"></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="blog-sidebar right">
                                <div class="single-blog-widget mb-50">
                                    <h3>search</h3>
                                    <div class="blog-search">
                                        <form id="search" action="#">
                                            <input type="search" placeholder="Search..." name="search" />
                                            <button type="submit">
                                                <span><i class="fa fa-search"></i></span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <div class="single-blog-widget mb-50">
                                    <h3>categories</h3>
                                    <ul>
                                        @foreach (var category in Model.categories)
                                        {
                                            <li><a href="#">@category.Categorie</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="single-blog-widget mb-50">
                                    <div class="single-blog-banner">
                                        <a href="blog-details.html" id="blog"><img src="/assets/img/blog/blog-img.jpg" alt="blog"></a>
                                        <h2>best<br> eductaion<br> theme</h2>
                                    </div>
                                </div>
                                <div class="single-blog-widget mb-50">
                                    <h3>latest post</h3>
                                    @foreach (var blog in Model.blogs.OrderByDescending(o => o.Data_Time).Take(3))
                                    {
                                        <div class="single-post mb-30">
                                            <div class="single-post-img">
                                                <a href="blog-details.html">
                                                    <img style="height:60px;" src="/@blog.ImagePath" alt="post">
                                                    <div class="blog-hover">
                                                        <i class="fa fa-link"></i>
                                                    </div>
                                                </a>
                                            </div>
                                            <div class="single-post-content">
                                                <h4><a href="blog-details.html">@blog.Name</a></h4>
                                                <p>@blog.Data_Time.ToString("dd MMM yyyy")</p>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="single-blog-widget">
                                    <h3>tags</h3>
                                    <div class="single-tag">
                                        <a asp-controller="Courses" asp-action="Index" class="mr-10 mb-10">course</a>
                                        <a class="mr-10 mb-10">education</a>
                                        <a class="mb-10">teachers</a>
                                        <a class="mr-10">learning</a>
                                        <a class="mr-10">university</a>
                                        <a asp-controller="Event" asp-action="Index">events</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        <!-- Blog Start -->
        <!-- Blog End -->
        <!-- Subscribe Start -->
        <!-- Subscribe Start -->
        <div class="subscribe-area pt-60 pb-70">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="subscribe-content section-title text-center">
                            <h2>subscribe our newsletter</h2>
                            <p>I must explain to you how all this mistaken idea </p>
                        </div>
                        <div class="newsletter-form mc_embed_signup">
                            <form action="https://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                <div id="mc_embed_signup_scroll" class="mc-form">
                                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                    <div class="mc-news" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                                    <button id="mc-embedded-subscribe" class="default-btn" type="submit" name="subscribe"><span>subscribe</span></button>
                                </div>
                            </form>
                            <!-- mailchimp-alerts Start -->
                            <div class="mailchimp-alerts">
                                <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                                <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                                <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                            </div>
                            <!-- mailchimp-alerts end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Subscribe End -->
        break;
    }
}

