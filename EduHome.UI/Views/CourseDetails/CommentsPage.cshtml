@model HomeViewModel
@{
    ViewData["Title"] = "CommentsPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model.courses)
{
    if (item.Id == ViewBag.Id)
    {
        <!-- Banner Area Start -->
        <div class="banner-area-wrapper">
            <div class="banner-area text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>courses details</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="FullPage">
            <div>
                <div class="LEFT">
                    <div>
                        <div class="Left_img">
                            <img src="/@item.ImagePath" />
                        </div>
                        <div class="Left_text">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="button" onclick="add(@item.Id)" id="StartShopping">Add to Cart</button>
                            }
                            else
                            {
                                <button type="button" onclick="add(@item.Id)" id="StartShopping">Add to Cart</button>
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div id="Likeee" class="course-share d-flex align-items-center justify-content-center">
                                    <a asp-action="AddWishlist" asp-route-id="@item.Id" asp-controller="Courses">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16 ">
                                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                        </svg>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="SiginUp" asp-action="LogIn">
                                    <div id="Likeee" class="course-share d-flex align-items-center justify-content-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16 ">
                                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                        </svg>
                                    </div>
                                </a>
                            }
                            <p style="font-size:20px;margin-top:30px;">@ViewBag.CommentsSum Comments</p>
                        </div>
                    </div>
                </div>
                <div class="RIGHT">
                    <div class="ordersss">
                    </div>
                    <div class="CreateComments">
                        <form method="post" asp-controller="CourseDetails" asp-action="AddComment" asp-route-id="@item.Id">
                            <div style="margin-top:20px;">
                                <h1>Write a comment</h1>
                                <textarea asp-for="@Model.Comments" rows="4" class="form-control" placeholder="Your Comments"></textarea>
                            </div>
                            <div class="submit-section">
                                <button style="margin-left:620px;margin-top:-60px" class="btn submit-btn" type="submit"><i style="font-size:20px;" class="fa-solid fa-paper-plane"></i></button>
                            </div>
                        </form>
                    </div>
                    <div class="Commentss">
                        <div id="commentssS">
                            @foreach (var comment in item.CourseComments.OrderByDescending(x => x.CreatedDate).Take(5))
                            {
                                <div class="ByComment">
                                    <div style="margin-left:20px;">
                                        <div>@comment.Comment</div>
                                        <div style="margin-top:7px;">
                                            <span>@comment.User.UserName | <span style="color:#f27a1a">@comment.CreatedDate.ToString("dd MMM yyyy")</span></span>
                                        </div>
                                    </div>
                                    <div style="margin-right:20px;">
                                        <span class="like"><i class="fa-solid fa-thumbs-up"></i>(0)</span>
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}



<style>

      .form-control {
        height: 20px;
    }

    .ordersss {
        width: 100%;
        height: 70px;
        background-color: whitesmoke;
    }

    .CreateComments{
        width: 100%;
        height: 60px;
    }
    .Commentss {
        width: 100%;
        height: 640px;
    }

    #commentssS {
        height: 470px;
        width: 100%;
        border-top: 1px solid #d2d6d4;
    }

    .ByComment {
        width: 100%;
        height: 18%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .like {
        font-size: 15px;
        font-weight: 200;
    }

        .like:hover {
            color: #f27a1a;
        }

    .FullPage {
        width: 100%;
        height: 770px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .FullPage > div {
            width: 80%;
            height: 770px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }


    .LEFT {
        width: 45%;
        height: 770px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .LEFT > div {
            width: 90%;
            height: 770px;
        }

    .Left_img {
        width: 100%;
        height: 66%;
    }

        .Left_img > img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .Left_text {
        width: 100%;
        height: 34%;
        display: grid;
        grid-template-columns: auto auto auto;
    }



    .RIGHT {
        width: 55%;
        height: 770px;
    }

    #addd {
        padding: 6px 20px 6px 20px;
        border: none;
        margin-bottom: 25px;
        background-color: white;
        color: forestgreen;
        border: 1px solid forestgreen;
        margin-top: -40px;
        margin-left: 140px;
    }

        #addd:hover {
            background-color: forestgreen;
            color: white;
        }

    #Likeee {
        margin-top: -180px;
        margin-left: -60px;
    }


    #StartShopping {
        margin-top: 10px;
        padding: 12px 0;
        width: 250px;
        height: 60px;
        border-radius: 6px;
        text-align: center;
        font-size: 18px;
        background-color: #f27a1a;
        color: white;
    }

        #StartShopping:hover {
            opacity: 0.8;
        }
</style>


@section Scripts{
    <script>
        async function add(courseId) {
            //var usernameEl = document.getElementById("username");
            //if (usernameEl == null) {

            //}
            try {
                var response = await fetch(`/Cart/AddItem?courseId=${courseId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    //window.location.href = "#cartCount"
                }
                else {
                    console.log(response.status)
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}


