@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #duz {
        margin-top: 20px;
        border-radius: 20px;
    }

    #cre {
        padding-left: 220px !important;
        padding-right: 220px !important;
    }
</style>

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Forget Password</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div style="margin-top:20px;margin-left:400px;z-index:999;" class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <span>Please enter your Email.</span>
                        </div>
                        <div class="login-form">
                            <form  method="post">

                                <input asp-for="Password" type="text" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                                <input asp-for="ConfirmPassword" type="text" placeholder="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <div class="button-box">
                                    <button type="submit" id="cre" class="default-btn">Reset password</button>
                                </div>
                            </form>
                            <a asp-action="LogIn"><button id="duz" class="default-btn">Login</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


