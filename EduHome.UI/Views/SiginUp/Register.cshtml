@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row" style="margin-top:20px">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form method="post" asp-action="Register">
                                <div class="mb-3 row">
                                    <label asp-for="FirstName" for="example-tel-input" class="col-md-2 col-form-label">FirstName</label>
                                    <div class="col-md-10">
                                        <input asp-for="FirstName" class="form-control" type="text">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="UserName" for="example-tel-input" class="col-md-2 col-form-label">LastName</label>
                                    <div class="col-md-10">
                                        <input asp-for="UserName" class="form-control" type="text">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="LastName" for="example-tel-input" class="col-md-2 col-form-label">LastName</label>
                                    <div class="col-md-10">
                                        <input asp-for="LastName" class="form-control" type="text">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="Email" for="example-tel-input" class="col-md-2 col-form-label">Email</label>
                                    <div class="col-md-10">
                                        <input asp-for="Email" class="form-control" type="email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="Password" for="example-tel-input" class="col-md-2 col-form-label">Password</label>
                                    <div class="col-md-10">
                                        <input asp-for="Password" class="form-control" type="password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="ConfirmPassword" for="example-tel-input" class="col-md-2 col-form-label">ConfirmPassword</label>
                                    <div class="col-md-10">
                                        <input asp-for="ConfirmPassword" class="form-control" type="password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label asp-for="Terms" for="example-tel-input" class="col-md-2 col-form-label">IF</label>
                                    <div class="col-md-10">
                                        <input asp-for="Terms" class="form-control" type="checkbox">
                                        <span asp-validation-for="Terms" class="text-danger"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts
    {
    @{
        <partial name="_ValidationScript" />
    }
}

