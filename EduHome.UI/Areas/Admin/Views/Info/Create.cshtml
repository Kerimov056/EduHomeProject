@model InfoViewModel
@{
    ViewData["Title"] = "Create";
}


<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4" style="color:burlywood;font-size:20px">Create Info</h4>
                            <form method="post">
                                <div class="row mb-4">
                                    <label asp-for="Title" class="col-sm-3 col-form-label">Name</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Title" type="text" class="form-control">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <label asp-for="Description" class="col-sm-3 col-form-label">Description</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Description" type="text" class="form-control">
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success waves-effect waves-light">Submit</button>
                                    <button type="button" class="btn btn-dark waves-effect waves-light"><a asp-action="Index" style="color:white">Back To List</a></button>
                                </div>
                            </form>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    @{
        <partial name="_ValidationScript" />
    }
   
}
