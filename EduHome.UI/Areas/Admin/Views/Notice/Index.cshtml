@model IEnumerable<Notice>
@{
    ViewData["Title"] = "Index";
    int Count = 1;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body" style="font-size:18px">
                            <h4 class="card-title" style="font-size:18px;color:dark">Blogs</h4>
                            <a asp-area="Admin" asp-action="Create" class="btn btn-outline-dark" style="font-size:16px;"><i class="bx bx-plus-circle"></i> Create new Blog</a>
                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">
                                    <table id="tech-companies-1" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Count</th>
                                                <th>Date Time</th>
                                                <th>Description</th>
                                                <th>Settings</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@Count</th>
                                                    <td>@item.Date_Time.ToString("dd MMM yyyy")</td>
                                                    <td>@item.Description</td>
                                                    <td style="display:flex;justify-content:center;weight:190px">
                                                        <button type="button" class="btn btn-info waves-effect waves-light"><a asp-action="Details" asp-route-id="@item.Id" style="color:white">Details</a></button>
                                                        <button type="button" class="btn btn-warning waves-effect waves-light" style="margin-left:10px;margin-right:10px"><a style="color:white" asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                                                        <button type="button" class="btn btn-danger waves-effect waves-light"><a asp-action="Delete" asp-route-id="@item.Id" style="color:white">Delete</a></button>
                                                    </td>
                                                </tr>
                                                Count++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end col -->
        </div>
    </div>
</div>

